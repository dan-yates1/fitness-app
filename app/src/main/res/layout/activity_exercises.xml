<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".layouts.ExercisesActivity">

    <Button
        android:id="@+id/chestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Chest"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/tricepsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bicepsBtn" />

    <Button
        android:id="@+id/shouldersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chestBtn"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Shoulders"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/tricepsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tricepsBtn"
        app:layout_constraintTop_toTopOf="@+id/tricepsBtn" />

    <Button
        android:id="@+id/tricepsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shouldersBtn"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/bicepsBtn"
        android:fontFamily="@font/roboto_bold"
        android:text="Triceps"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/chestBtn"
        app:layout_constraintEnd_toStartOf="@+id/shouldersBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chestBtn"
        app:layout_constraintTop_toTopOf="@+id/chestBtn" />

    <Button
        android:id="@+id/bicepsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shouldersBtn"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Biceps"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/hamstringsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allBtn" />

    <Button
        android:id="@+id/hamstringsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/chestBtn"
        android:layout_toRightOf="@+id/chestBtn"
        android:fontFamily="@font/roboto_bold"
        android:text="Hams"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/bicepsBtn"
        app:layout_constraintEnd_toStartOf="@+id/backBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bicepsBtn"
        app:layout_constraintTop_toTopOf="@+id/bicepsBtn" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chestBtn"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/shouldersBtn"
        android:layout_toRightOf="@+id/shouldersBtn"
        android:fontFamily="@font/roboto_bold"
        android:text="Back"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/hamstringsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hamstringsBtn"
        app:layout_constraintTop_toTopOf="@+id/hamstringsBtn" />

    <Button
        android:id="@+id/allBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chestBtn"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/backBtn"
        android:layout_toRightOf="@+id/shouldersBtn"
        android:fontFamily="@font/roboto_bold"
        android:text="All"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/quadsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <Button
        android:id="@+id/quadsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_toEndOf="@+id/hamstringsBtn"
        android:layout_toRightOf="@+id/hamstringsBtn"
        android:fontFamily="@font/roboto_bold"
        android:text="Quads"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/allBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/allBtn"
        app:layout_constraintTop_toTopOf="@+id/allBtn" />

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bicepsBtn"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:alpha="0.75"
        android:background="@drawable/edit_text_bg"
        android:hint="Exercise name"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tricepsBtn" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/orange"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_bold"
        android:text="EXERCISES"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavBar"
        android:layout_below="@+id/searchEditText"
        android:background="@color/dark_grey"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/searchEditText"
        tools:listitem="@layout/item_exercise" />


</androidx.constraintlayout.widget.ConstraintLayout>