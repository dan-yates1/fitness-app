<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".fragments.GoalsFragment">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.05"
        android:scaleType="center"
        android:src="@drawable/bg_img" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:text="WHAT IS YOUR MAIN\nWORKOUT GOAL?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <ImageButton
        android:id="@+id/strengthButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/round_button"
        android:padding="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_barbell"
        app:layout_constraintBottom_toTopOf="@+id/fitnessButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sizeButton"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageButton
        android:id="@+id/fitnessButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/round_button"
        android:padding="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_rope"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/weightLossButton"
        app:layout_constraintTop_toBottomOf="@+id/strengthButton" />

    <ImageButton
        android:id="@+id/sizeButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/round_button"
        android:padding="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_dumbell"
        app:layout_constraintBottom_toTopOf="@+id/weightLossButton"
        app:layout_constraintEnd_toStartOf="@+id/strengthButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageButton
        android:id="@+id/weightLossButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/round_button"
        android:padding="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_weight_loss"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/fitnessButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sizeButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal"
        android:text="Fitness"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/fitnessButton"
        app:layout_constraintStart_toStartOf="@+id/fitnessButton"
        app:layout_constraintTop_toBottomOf="@+id/fitnessButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal"
        android:text="Strength"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/strengthButton"
        app:layout_constraintStart_toStartOf="@+id/strengthButton"
        app:layout_constraintTop_toBottomOf="@+id/strengthButton" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal"
        android:text="Weight-loss"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/weightLossButton"
        app:layout_constraintStart_toStartOf="@+id/weightLossButton"
        app:layout_constraintTop_toBottomOf="@+id/weightLossButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal"
        android:text="Muscle-gain"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/sizeButton"
        app:layout_constraintStart_toStartOf="@+id/sizeButton"
        app:layout_constraintTop_toBottomOf="@+id/sizeButton" />

</androidx.constraintlayout.widget.ConstraintLayout>