<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GoalsFragment"
    android:background="@color/dark_grey">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_img"
        android:alpha="0.05"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="WHAT IS YOUR MAIN\nWORKOUT GOAL?"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/strengthButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        android:padding="25dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_barbell"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/fitnessButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/round_button"
        android:padding="25dp"
        android:src="@drawable/ic_rope"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/sizeButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/strengthButton"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:padding="25dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_dumbell"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/weightLossButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/strengthButton"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/round_button"
        android:padding="25dp"
        android:src="@drawable/ic_weight_loss"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strengthButton"
        android:layout_alignStart="@+id/fitnessButton"
        android:layout_alignLeft="@+id/fitnessButton"
        android:layout_alignEnd="@+id/fitnessButton"
        android:layout_alignRight="@+id/fitnessButton"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal"
        android:text="Fitness"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/strengthButton"
        android:layout_alignStart="@+id/strengthButton"
        android:layout_alignLeft="@+id/strengthButton"
        android:layout_alignEnd="@+id/strengthButton"
        android:layout_alignRight="@+id/strengthButton"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal"
        android:text="Strength"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightLossButton"
        android:layout_alignStart="@+id/weightLossButton"
        android:layout_alignLeft="@+id/weightLossButton"
        android:layout_alignEnd="@+id/weightLossButton"
        android:layout_alignRight="@+id/weightLossButton"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal"
        android:text="Weight-loss"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightLossButton"
        android:layout_alignStart="@+id/sizeButton"
        android:layout_alignLeft="@+id/sizeButton"
        android:layout_alignEnd="@+id/sizeButton"
        android:layout_alignRight="@+id/sizeButton"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal"
        android:text="Muscle-gain"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>